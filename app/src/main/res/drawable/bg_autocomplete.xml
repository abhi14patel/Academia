<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorWhite" />
                    <corners android:radius="@dimen/_3sdp" />

                    <stroke
                        android:color="@color/colorGreylight"
                        android:width="0.5dp"/>

                    <!-- If you want to add some padding -->
                    <padding
                        android:left="@dimen/_5sdp"
                        android:right="@dimen/_12sdp">
                    </padding>
                </shape>
            </item>

            <item>
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/search_input" />
            </item>
        </layer-list>
    </item>

</selector>
