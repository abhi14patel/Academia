<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardPersonalDetails"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivHeaderIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvRequestId1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/request_id"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvRequestId"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvRequestBy1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/request_by"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvRequestBy"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvRequestType1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/request_type"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvRequestType"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvAssignedTo1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/request_assigned_to"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvAssignedTo"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- HEADER INDICATOR -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/ivHeaderIndicator"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_forward" />

            </RelativeLayout>

            <View
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <RelativeLayout
                android:padding="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_calendar3"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"/>

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/CustomBlackFont"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:text=""/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/CustomBlackFont"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:text=""/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>