<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <View
        android:background="@color/colorSlateGray1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivArrow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNodeName"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_gravity="top|left|center"
                android:gravity="top|left|center"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/colorBlack1"
                style="@style/CustomBlackFont1"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMarks1"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:text="@string/obtained_max"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/tvMarks2"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="left|bottom|center"
                            android:gravity="left|bottom|center"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="@string/marks_grades"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_7sdp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/_3sdp"
                        android:id="@+id/tvMarks"
                        style="@style/CustomGreyFont"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:textStyle="bold"
                        android:text=""
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArrow1"
            app:srcCompat="@drawable/ic_arrow_forward"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:background="@color/colorSlateGray1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>
