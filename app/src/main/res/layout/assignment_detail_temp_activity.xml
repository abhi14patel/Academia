<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/appBarLayout"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:fillViewport="true"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCourseName"
                    android:text=""
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:textSize="@dimen/_14sdp"
                    style="@style/CustomBlackFont1"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCourseStatus1"
                        android:text="@string/status"
                        android:gravity="left|center"
                        android:layout_gravity="left|center"
                        style="@style/CustomBlackFont"/>

                    <TextView
                        android:id="@+id/tvCourseStatus"
                        android:text=""
                        android:gravity="left|center"
                        android:layout_gravity="left|center"
                        style="@style/CustomBlackFont"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llAssignmentName"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/assignment_name"
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                android:textColor="@color/colorGrey"
                                style="@style/CustomGreyFont"/>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvAssignmentName"
                                android:text=""
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                style="@style/CustomBlackFont1"/>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/colorLightGray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCourseVariant"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvCourseVariant1"
                                android:text="@string/course_variant"
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                android:textColor="@color/colorGrey"
                                style="@style/CustomGreyFont"/>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvCourseVariant"
                                android:text=""
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                style="@style/CustomBlackFont1"/>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/colorLightGray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/llPublishedDate"
                                android:padding="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPublishedDate1"
                                    android:text="@string/published_date"
                                    android:gravity="left|center"
                                    android:layout_gravity="left|center"
                                    android:textColor="@color/colorGrey"
                                    style="@style/CustomGreyFont"/>

                                <TextView
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/tvPublishedDate"
                                    android:text=""
                                    android:gravity="left|center"
                                    android:layout_gravity="left|center"
                                    style="@style/CustomBlackFont1"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llDueOn"
                                android:padding="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvDueOn1"
                                    android:text="@string/due_on"
                                    android:gravity="left|center"
                                    android:layout_gravity="left|center"
                                    android:textColor="@color/colorGrey"
                                    style="@style/CustomGreyFont"/>

                                <TextView
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/tvDueOn"
                                    android:text=""
                                    android:gravity="left|center"
                                    android:layout_gravity="left|center"
                                    style="@style/CustomBlackFont1"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/colorLightGray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFacultyName"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvFacultyName1"
                                android:text="@string/faculty1"
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                android:textColor="@color/colorGrey"
                                style="@style/CustomGreyFont"/>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvFacultyName"
                                android:text=""
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                style="@style/CustomBlackFont1"/>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/colorLightGray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDescription"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/description"
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                android:textColor="@color/colorGrey"
                                style="@style/CustomGreyFont"/>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvDescription"
                                android:text=""
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                style="@style/CustomBlackFont1"/>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/colorLightGray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAttachment"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvAttachment1"
                                android:text="@string/attachment"
                                android:gravity="left|center"
                                android:layout_gravity="left|center"
                                android:textColor="@color/colorGrey"
                                style="@style/CustomGreyFont"/>

                            <RelativeLayout
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivAttachment"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/pdf"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"/>

                                <TextView
                                    android:id="@+id/tvAttachment"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text=""
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="left|center"
                                    android:textColor="@color/colorBlack1"
                                    android:layout_toLeftOf="@+id/tvDownload"
                                    android:layout_toRightOf="@+id/ivAttachment"
                                    style="@style/CustomBlackFont1"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSubmitMsg"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/colorRed2"
                    android:text="@string/you_cannot_submit_this_assignment"
                    style="@style/CustomBlackFont1"/>

                <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/submit"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bg_submit"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:id="@+id/btnSubmit"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>