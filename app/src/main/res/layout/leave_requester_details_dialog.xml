<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/switch_student_title_background"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/titleTextView"
            android:singleLine="true"
            android:textStyle="bold"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            style="@style/CustomWhiteFont" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_close_white_24dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvRequesterName1"
                    android:text="@string/requester_name"
                    android:gravity="left|center"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="left|center"
                    android:textColor="@color/colorGrey"
                    style="@style/CustomGreyFont"/>

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tvRequesterName"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    style="@style/CustomBlackFont1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBatch1"
                    android:text="@string/batch"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:textColor="@color/colorGrey"
                    style="@style/CustomGreyFont"/>

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tvBatch"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    style="@style/CustomBlackFont1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvProgram1"
                    android:text="@string/program"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:textColor="@color/colorGrey"
                    style="@style/CustomGreyFont"/>

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tvProgram"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    style="@style/CustomBlackFont1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEmailId1"
                    android:text="@string/email_id"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:textColor="@color/colorGrey"
                    style="@style/CustomGreyFont"/>

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tvEmailId"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    style="@style/CustomBlackFont1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMobileNumber1"
                    android:text="@string/mobile_number"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    android:textColor="@color/colorGrey"
                    style="@style/CustomGreyFont"/>

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tvMobileNumber"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:layout_gravity="left|center"
                    style="@style/CustomBlackFont1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>