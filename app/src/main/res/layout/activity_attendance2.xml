<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <include layout="@layout/user_info_layout" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/attendanceRL"
        android:layout_below="@+id/user_info_layout">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/cal_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llPrevious"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/arrow"
                                android:rotation="180" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="4dp"
                            android:text="Jan 2016"
                            android:textColor="@color/colorDarkGrayText"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llNext"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/arrow" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorDarkGray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="4dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:weightSum="7">

                        <TextView
                            android:id="@+id/TextView06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="S"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="M"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="T"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="W"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="T"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="F"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="S"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <GridView
                        android:id="@+id/gvCalendar"
                        android:layout_width="fill_parent"
                        android:layout_height="275dp"
                        android:layout_gravity="center"
                        android:cacheColorHint="@color/colorWhite"
                        android:gravity="center"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="7"
                        android:paddingLeft="8dp"
                        android:paddingRight="16dp"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:textAlignment="gravity"
                        android:visibility="visible"
                        android:layout_marginBottom="8dp">

                    </GridView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/cal_linearlayout"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardPersonalDetails"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/color_info_ll"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/list_bg"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:weightSum="2">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@drawable/bg_circle_present" />

                                    <TextView
                                        android:id="@+id/tvPresent"
                                        style="@style/CustomGreyFont"
                                        android:layout_weight=".5"
                                        android:clickable="false"
                                        android:text="@string/present"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:weightSum="2">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@drawable/bg_circle_absent" />

                                    <TextView
                                        android:id="@+id/tvAbsent"
                                        style="@style/CustomGreyFont"
                                        android:layout_weight=".5"
                                        android:clickable="false"
                                        android:text="@string/absent" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:weightSum="2">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@drawable/bg_circle_other" />

                                    <TextView
                                        android:id="@+id/tvOther"
                                        style="@style/CustomGreyFont"
                                        android:layout_weight=".5"
                                        android:clickable="false"
                                        android:text="@string/other"/>
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:background="@color/colorLightGray"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"/>

                            <RelativeLayout
                                android:id="@+id/rl1"
                                android:visibility="visible"
                                android:paddingBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:padding="@dimen/_6sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvOverall"
                                        android:text="@string/overall"
                                        style="@style/CustomGreyFont1"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvTotalClasses1"
                                            style="@style/CustomGreyFont"
                                            android:textSize="@dimen/_10sdp"
                                            android:text="@string/total_classes"
                                            android:textColor="@color/colorDarkGray"/>

                                        <TextView
                                            android:id="@+id/tvTotalClassesValue"
                                            style="@style/CustomGreyFont"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:text=""
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/colorDarkGray"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ProgressBar
                                                    android:id="@+id/pbPresent1"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="@dimen/_40sdp"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminate="false"
                                                    android:max="100"
                                                    android:progressDrawable="@drawable/progress_present"
                                                    android:progress="20" />

                                                <TextView
                                                    android:text="0.0%"
                                                    android:textSize="@dimen/_9sdp"
                                                    android:layout_centerInParent="true"
                                                    android:id="@+id/tvPresentPercentage1"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tvPresent1"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/present"
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                                <TextView
                                                    android:id="@+id/tvPresentValue"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_width="wrap_content"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:text=""
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                            </LinearLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ProgressBar
                                                    android:id="@+id/pbAbsent1"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="@dimen/_40sdp"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminate="false"
                                                    android:max="100"
                                                    android:progressDrawable="@drawable/progress_absent"
                                                    android:progress="80" />

                                                <TextView
                                                    android:text="0.0%"
                                                    android:textSize="@dimen/_9sdp"
                                                    android:layout_centerInParent="true"
                                                    android:id="@+id/tvAbsentPercentage1"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tvAbsent1"
                                                    style="@style/CustomGreyFont"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/absent"
                                                    android:textColor="@color/colorDarkGray"/>

                                                <TextView
                                                    android:id="@+id/tvAbsentValue"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_width="wrap_content"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:text=""
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivNext"
                                    app:srcCompat="@drawable/ic_arrow_forward"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_6sdp"
                                        android:background="@drawable/bg_circle_active"
                                        android:layout_height="@dimen/_6sdp"/>

                                    <ImageView
                                        android:layout_width="@dimen/_6sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/bg_circle_inactive"
                                        android:layout_height="@dimen/_6sdp"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl2"
                                android:visibility="gone"
                                android:paddingBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:padding="@dimen/_6sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvThisMonth"
                                        android:text="@string/this_month"
                                        style="@style/CustomGreyFont1"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvTotalClasses2"
                                            style="@style/CustomGreyFont"
                                            android:textSize="@dimen/_10sdp"
                                            android:text="@string/total_classes"
                                            android:textColor="@color/colorDarkGray"/>

                                        <TextView
                                            android:id="@+id/tvTotalClassesValue2"
                                            style="@style/CustomGreyFont"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:text=""
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/colorDarkGray"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ProgressBar
                                                    android:id="@+id/pbPresent2"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="@dimen/_40sdp"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminate="false"
                                                    android:max="100"
                                                    android:progressDrawable="@drawable/progress_present"
                                                    android:progress="50" />

                                                <TextView
                                                    android:text="0.0%"
                                                    android:textSize="@dimen/_9sdp"
                                                    android:layout_centerInParent="true"
                                                    android:id="@+id/tvPresentPercentage2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tvPresent2"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/present"
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                                <TextView
                                                    android:id="@+id/tvPresentValue2"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_width="wrap_content"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:text=""
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ProgressBar
                                                    android:id="@+id/pbAbsent2"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="@dimen/_40sdp"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminate="false"
                                                    android:max="100"
                                                    android:progressDrawable="@drawable/progress_absent"
                                                    android:progress="80" />

                                                <TextView
                                                    android:text="0.0%"
                                                    android:textSize="@dimen/_9sdp"
                                                    android:layout_centerInParent="true"
                                                    android:id="@+id/tvAbsentPercentage2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tvAbsent2"
                                                    style="@style/CustomGreyFont"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/absent"
                                                    android:textColor="@color/colorDarkGray"/>

                                                <TextView
                                                    android:id="@+id/tvAbsentValue2"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_width="wrap_content"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:text=""
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ProgressBar
                                                    android:id="@+id/pbOther2"
                                                    style="?android:attr/progressBarStyleHorizontal"
                                                    android:layout_width="@dimen/_40sdp"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminate="false"
                                                    android:max="100"
                                                    android:progressDrawable="@drawable/progress_other"
                                                    android:progress="80" />

                                                <TextView
                                                    android:text="0.0%"
                                                    android:textSize="@dimen/_9sdp"
                                                    android:layout_centerInParent="true"
                                                    android:id="@+id/tvOtherPercentage2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tvOther2"
                                                    style="@style/CustomGreyFont"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/other"
                                                    android:textColor="@color/colorDarkGray"/>

                                                <TextView
                                                    android:id="@+id/tvOtherValue2"
                                                    style="@style/CustomGreyFont"
                                                    android:layout_width="wrap_content"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:text=""
                                                    android:textColor="@color/colorDarkGray"
                                                    android:textSize="@dimen/_10sdp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivPrevious"
                                    app:srcCompat="@drawable/ic_arrow_back"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_height="@dimen/_18sdp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_6sdp"
                                        android:background="@drawable/bg_circle_inactive"
                                        android:layout_height="@dimen/_6sdp"/>

                                    <ImageView
                                        android:layout_width="@dimen/_6sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/bg_circle_active"
                                        android:layout_height="@dimen/_6sdp"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

