<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl1"
        android:padding="@dimen/_10sdp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_circle_grey"
            android:padding="0.5dp"
            android:src="@drawable/program_attendance_icon" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvCount"
            android:layout_toRightOf="@+id/ivIcon"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:text=""
                android:gravity="left|center"
                android:maxLines="2"
                android:textColor="@color/colorBlack1"
                style="@style/CustomBlackFont1"/>

            <TextView
                android:id="@+id/tvFacultyName"
                android:text=""
                android:gravity="left|center"
                android:maxLines="2"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorDarkGray"
                style="@style/CustomGreyFont1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCount"
            android:text="--"
            android:textColor="@color/colorDarkGrayText"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl1"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</RelativeLayout>