<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackground3"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llTimeTable"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/my_courses_sub_icon_size"
                    android:layout_height="@dimen/my_courses_sub_icon_size"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/my_course_timetable" />

                <TextView
                    android:id="@+id/tvTimetable"
                    style="@style/CustomGreyFont"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:text="@string/timetable1"
                    android:textColor="@color/colorGrey2"/>

            </LinearLayout>

            <View
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:id="@+id/llAttendance"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/my_course_attendance"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/my_courses_sub_icon_size"
                    android:layout_height="@dimen/my_courses_sub_icon_size"/>

                <TextView
                    android:id="@+id/tvAttendance"
                    style="@style/CustomGreyFont"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:text="@string/attendance1"
                    android:textColor="@color/colorGrey2"/>

            </LinearLayout>

            <View
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:id="@+id/llHomeworkAssignment"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/my_course_homework_assignment"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/my_courses_sub_icon_size"
                    android:layout_height="@dimen/my_courses_sub_icon_size"/>

                <TextView
                    android:id="@+id/tvHomeworkAssignment"
                    style="@style/CustomGreyFont"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:text="@string/homework_assignment"
                    android:textColor="@color/colorGrey2"/>

            </LinearLayout>

            <View
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:id="@+id/llCourseSession"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/my_course_session_diary"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/my_courses_sub_icon_size"
                    android:layout_height="@dimen/my_courses_sub_icon_size"/>

                <TextView
                    android:id="@+id/tvCourseSession"
                    style="@style/CustomGreyFont"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:text="@string/session_diary"
                    android:textColor="@color/colorGrey2"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>