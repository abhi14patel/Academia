<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:background="@color/colorWhite">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/includeTB"
            layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardPersonalDetails"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="@dimen/_7sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTypeIncident1"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:text="@string/type_of_incident"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorGrey1"/>

                        <TextView
                            android:id="@+id/tvTypeIncident"
                            style="@style/CustomBlackFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11sdp"
                            android:text=""/>

                    </LinearLayout>

                    <View
                        android:background="@color/colorLightGray"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <LinearLayout
                        android:padding="@dimen/_7sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvDOI1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/date_of_incident"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvDOI"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvDOA1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/date_of_action"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvDOA"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvReportedBy1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/reported_by"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvReportedBy"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="2"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvReporterName1"
                                    style="@style/CustomGreyFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:text="@string/reporter_name"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/colorGrey"/>

                                <TextView
                                    android:id="@+id/tvReporterName"
                                    style="@style/CustomBlackFont"
                                    android:layout_gravity="top|left|center"
                                    android:gravity="top|left|center"
                                    android:maxLines="2"
                                    android:textSize="@dimen/_11sdp"
                                    android:text=""/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvActionTaken1"
                                style="@style/CustomGreyFont"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:text="@string/action_taken"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tvActionTaken"
                                style="@style/CustomBlackFont"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:textSize="@dimen/_11sdp"
                                android:text=""/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvIncidentDetail1"
                                style="@style/CustomGreyFont"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:text="@string/incident_details"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tvIncidentDetail"
                                style="@style/CustomBlackFont"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:textSize="@dimen/_11sdp"
                                android:text=""/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvRemark1"
                                style="@style/CustomGreyFont"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:text="@string/remark"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tvRemark"
                                style="@style/CustomBlackFont"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:textSize="@dimen/_11sdp"
                                android:text=""/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDocuments"
                            android:visibility="visible"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDocument1"
                                style="@style/CustomGreyFont"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left|center"
                                android:gravity="top|left|center"
                                android:text="@string/document_uploaded"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_11sdp" />

                            <com.serosoft.academiassu.Widgets.ExpandedListView
                                android:id="@+id/lvDocument"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@color/colorGrey"
                                android:dividerHeight="1dp"
                                android:fillViewport="true"
                                android:scrollbars="vertical" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>