<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_3sdp"
    android:paddingRight="@dimen/_3sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardPersonalDetails"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/_7sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvConditionType1"
                        style="@style/CustomGreyFont"
                        android:layout_gravity="top|left|center"
                        android:gravity="top|left|center"
                        android:text="@string/condition_type"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/colorGrey1"/>

                    <TextView
                        android:id="@+id/tvConditionType"
                        style="@style/CustomBlackFont"
                        android:layout_gravity="top|left|center"
                        android:gravity="top|left|center"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/llSince"
                    android:layout_gravity="top|right|center"
                    android:gravity="top|right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSince1"
                        style="@style/CustomGreyFont"
                        android:layout_gravity="top|right|center"
                        android:gravity="top|right|center"
                        android:text="@string/since"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/colorGrey"/>

                    <Space
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSince"
                        style="@style/CustomBlackFont"
                        android:layout_gravity="top|right|center"
                        android:gravity="top|right|center"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:padding="@dimen/_7sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvConsultingDoctor1"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:text="@string/consulting_doctor"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/tvConsultingDoctor"
                            style="@style/CustomBlackFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:maxLines="2"
                            android:textSize="@dimen/_11sdp"
                            android:text=""/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvContact1"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:text="@string/contact_number"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/tvContact"
                            style="@style/CustomBlackFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:maxLines="1"
                            android:textSize="@dimen/_11sdp"
                            android:text=""/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMedicalCondition1"
                            style="@style/CustomGreyFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:text="@string/medical_condition"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/tvMedicalCondition"
                            style="@style/CustomBlackFont"
                            android:layout_gravity="top|left|center"
                            android:gravity="top|left|center"
                            android:textSize="@dimen/_11sdp"
                            android:text=""/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvPrecuation1"
                        style="@style/CustomGreyFont"
                        android:layout_gravity="top|left|center"
                        android:gravity="top|left|center"
                        android:text="@string/precuation_medication"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/colorGrey"/>

                    <TextView
                        android:id="@+id/tvPrecuation"
                        style="@style/CustomBlackFont"
                        android:layout_gravity="top|left|center"
                        android:gravity="top|left|center"
                        android:textSize="@dimen/_11sdp"
                        android:text=""/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>