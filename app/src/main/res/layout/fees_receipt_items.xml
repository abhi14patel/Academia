<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/feeDetailLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFeeHead"
                style="@style/CustomBlackFont1"
                android:layout_toLeftOf="@+id/feeAmountTV"
                android:layout_marginRight="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:text=""
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFeeAmount"
                style="@style/CustomBlackFont"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorDarkGrayText"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/feeDetailLL">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDueDate"
                    style="@style/CustomGreyFont"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/colorDarkGrayText"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@null"
                    android:src="@drawable/pdf" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>
